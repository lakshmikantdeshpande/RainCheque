<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
   
   <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
	<style name="text_white">
    	 <item name="android:textColor">#FFFFFF</item>
      	
   </style>
   <style name="text_black">       
       <item name="android:textColor">#000000</item>
       
   </style>
   <style name="backdropBlack">
       <item name="android:background">#000000</item>
   </style>
   <style name="backdropWhite">
       <item name="android:background">#FFFFFF</item>
   </style>
   
   <style name="backdropBlackGrey">
       <item name="android:background">#333333</item>
   </style>
   <style name="backdropWhiteGrey">
       <item name="android:background">#CCCCCC</item>
   </style>
   <style name="actionBarIconExportDark">
       <item name="android:icon">@drawable/export_dark</item>       
   </style>
   
   <style name="actionBarIconExportLight">
       <item name="android:icon">@drawable/export_light</item>       
   </style>
   <style name="actionBarIconImportDark">
       <item name="android:icon">@drawable/import_dark</item>       
   </style>
   
   <style name="actionBarIconImportLight">
       <item name="android:icon">@drawable/import_light</item>       
   </style>
   <style name="actionBarIconShareDark">
       <item name="android:icon">@drawable/share_dark</item>       
   </style>
   
   <style name="actionBarIconShareLight">
       <item name="android:icon">@drawable/share_light</item>       
   </style>
   
    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="rowColour">@style/text_white</item>
        <item name="rowColourInverse">@style/text_black</item> 
        <item name="backdrop">@style/backdropBlackGrey</item> 
        <item name="background">@style/backdropBlack</item>
        <item name="buttonBar">@style/ButtonBarButtonLight</item>
        <item name="actionBarIconExport">@style/actionBarIconExportDark</item>        
         <item name="actionBarIconImport">@style/actionBarIconImportDark</item>
         <item name="actionBarIconShare">@style/actionBarIconShareDark</item>
         
    </style>
    
    <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        <item name="rowColour">@style/text_black</item>
        <item name="rowColourInverse">@style/text_white</item>
        <item name="backdrop">@style/backdropWhiteGrey</item>
        <item name="background">@style/backdropWhite</item>
        <item name="buttonBar">@style/ButtonBarButton</item>
         <item name="actionBarIconExport">@style/actionBarIconExportLight</item>
         <item name="actionBarIconImport">@style/actionBarIconImportLight</item>
         <item name="actionBarIconShare">@style/actionBarIconShareLight</item>
         
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>    
    <style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	<style name="ButtonBar" parent="@android:style/Holo.ButtonBar">
	    
	</style>
	<style name="ButtonBarButton" parent="@android:style/Widget.Holo.Button.Borderless">
    	<item name="android:textColor">#000000</item>
	</style>
	<style name="ButtonBarButtonLight" parent="@android:style/Widget.Holo.Button.Borderless">
    	<item name="android:textColor">#FFFFFF</item>
	</style>
	

</resources>